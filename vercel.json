{
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    // Aturan spesifik aset
    {
      "source": "/assets/(.*)",
      "destination": "/assets/$1"
    },
    {
      "source": "/sitemap.xml",
      "destination": "/sitemap.xml"
    },
    {
      "source": "/robots.txt",
      "destination": "/robots.txt"
    },
    // Aturan fallback umum (History Mode)
    {
      "source": "/:path*", 
      "destination": "/index.html"
    }
  ]
}
